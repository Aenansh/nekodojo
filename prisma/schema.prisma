generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id
  email      String  @unique
  name       String?
  profileUrl String?

  firstName String?
  lastName  String?
  bio       String?

  isOnboarded Boolean? @default(false)

  noOfQuestionsSolved Int?
  beltRank            String? @default("white-belt")

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
